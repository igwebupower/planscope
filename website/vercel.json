{
  "rewrites": [
    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/cookies", "destination": "/cookies.html" },
    { "source": "/help", "destination": "/help.html" },
    { "source": "/status", "destination": "/status.html" },
    { "source": "/checkout/success", "destination": "/checkout/success.html" },
    { "source": "/checkout/cancelled", "destination": "/checkout/cancelled.html" },
    { "source": "/licence/validate", "destination": "/api/licence/validate" },
    { "source": "/licence/check/:key", "destination": "/api/licence/check/:key" },
    { "source": "/checkout/redirect", "destination": "/api/checkout/redirect" },
    { "source": "/checkout/create-session", "destination": "/api/checkout/create-session" },
    { "source": "/checkout/get-licence", "destination": "/api/checkout/get-licence" },
    { "source": "/webhook/stripe", "destination": "/api/webhook/stripe" },
    { "source": "/health", "destination": "/api/health" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|woff2?|png|jpg|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
